

DROP TABLE IF EXISTS `code`;
CREATE TABLE `code` (
  `user_phone` char(11) NOT NULL DEFAULT '' COMMENT '手机号',
  `code_val` varchar(7) NOT NULL DEFAULT '' COMMENT '验证码',
  `send_time` datetime NOT NULL DEFAULT '1900-01-01 00:00:00' COMMENT '发送时间'
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='验证码表';


DROP TABLE IF EXISTS `user`;
CREATE TABLE `user` (
  `user_name` varchar(16) NOT NULL DEFAULT '' COMMENT '用户名',
  `user_id` bigint(20) NOT NULL COMMENT '用户Id',
  `user_guid` char(24) NOT NULL DEFAULT '' COMMENT '用户Guid',
  `user_phone` char(11) NOT NULL DEFAULT '' COMMENT '手机号',
  `password` varchar(16) NOT NULL DEFAULT '' COMMENT '密码',
  `registrate_time` datetime NOT NULL DEFAULT '1900-01-01 00:00:00' COMMENT '注册时间',
  `user_type` smallint(1) NOT NULL DEFAULT '0' COMMENT '用户状态',
  `Head_pic_url` varchar(40) NOT NULL DEFAULT '' COMMENT '头像储存地址',
  PRIMARY KEY (`user_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='用户表';


DROP TABLE IF EXISTS `order`;
CREATE TABLE `order` (
  `order_id` VARCHAR(30) NOT NULL COMMENT '订单号',
  `user_id` bigint(20) NOT NULL DEFAULT '0'  COMMENT '用户Id',
  `car_id` bigint(20) NOT NULL DEFAULT '0'  COMMENT '车辆Id',
  `order_generation_time` datetime NOT NULL DEFAULT '1900-01-01 00:00:00' COMMENT '订单生成时间',
  `start_time` datetime NOT NULL DEFAULT '1900-01-01 00:00:00' COMMENT '开始时间',
  `end_time` datetime NOT NULL DEFAULT '1900-01-01 00:00:00' COMMENT '结束时间',
  `take_car_shop` bigint(20) NOT NULL DEFAULT '0' COMMENT '取车门店',
  `return_car_shop` bigint(20) NOT NULL DEFAULT '0' COMMENT '还车门店',
  `total_amount` DECIMAL(5,2) NOT NULL DEFAULT '0.00' COMMENT '总金额',
  `prepay_amount` DECIMAL(5,2) NOT NULL DEFAULT '0.00' COMMENT '定金',
  `pay_type` TINYINT NOT NULL DEFAULT '0' COMMENT '支付状态',
  `position` varchar(40) NOT NULL DEFAULT '' COMMENT '车辆当前位置',
  PRIMARY KEY (`order_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='订单表';


DROP TABLE IF EXISTS `store`;
CREATE TABLE `store` (
  `store_id` bigint(20) NOT NULL DEFAULT '0'  COMMENT '门店Id',
  `store_name` VARCHAR(20) NOT NULL DEFAULT '0' COMMENT '门店名',
  `platform` TINYINT NOT NULL DEFAULT '0'  COMMENT '所属平台',
  `location` varchar(40) NOT NULL DEFAULT '0' COMMENT '位置信息',
  PRIMARY KEY (`store_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='门店表';


DROP TABLE IF EXISTS `car`;
CREATE TABLE `car` (
  `car_id` bigint(20) NOT NULL DEFAULT '0'  COMMENT '车辆Id',
  `car_license` VARCHAR(10) NOT NULL COMMENT '车牌号',
  `car_brand` VARCHAR(16) NOT NULL DEFAULT '0'  COMMENT '品牌',
  `car_type` TINYINT NOT NULL DEFAULT '0' COMMENT '车辆类型',
  `car_price` DECIMAL(5,2) NOT NULL DEFAULT '0.0' COMMENT '车辆价位',
  `in_store` bigint(20) NOT NULL DEFAULT '0' COMMENT '目前所在门店',
  `car_state` TINYINT NOT NULL DEFAULT '0' COMMENT '车辆状态',
  `rental_price` DECIMAL(5,2) NOT NULL DEFAULT '0' COMMENT '出租价格',
  `car_picture` VARCHAR(300) NOT NULL DEFAULT '' COMMENT '相关照片路径',
  `car_qualification` VARCHAR(500) NOT NULL DEFAULT '0.00' COMMENT '相关资质信息',
  `insurance_type` VARCHAR(40) NOT NULL DEFAULT 'ss' COMMENT '保险类型',
  `aduit_type` TINYINT NOT NULL DEFAULT '0' COMMENT '车辆审核状态',
  `aduit_id` bigint(20) NOT NULL DEFAULT '0' COMMENT '车辆审核号',
  PRIMARY KEY (`car_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='车辆表';

DROP TABLE IF EXISTS `driver`;
CREATE TABLE `driver` (
  `driver_name` VARCHAR(8) NOT NULL DEFAULT '' COMMENT '姓名',
  `id_number` CHAR(18) NOT NULL DEFAULT '00000000000000000x' COMMENT '身份证号',
  `user_id` bigint(20) NOT NULL DEFAULT '0'  COMMENT '用户Id',
  `expiration_date` DATE NOT NULL DEFAULT '1900-01-01'  COMMENT '到期日期',
  `file_number` VARCHAR(22) NOT NULL DEFAULT ' ' COMMENT '驾照档案号',
  `driver_Pic` VARCHAR(300) NOT NULL DEFAULT ' ' COMMENT '相关照片路径',
  `aduit_type` TINYINT NOT NULL DEFAULT '0' COMMENT '驾驶人审核状态',
  `aduit_id` bigint(20) NOT NULL DEFAULT '0' COMMENT '驾驶人审核号',
  PRIMARY KEY (`id_number`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='驾驶人表';

DROP TABLE IF EXISTS `platform`;
CREATE TABLE `platform` (
  `platform_id` TINYINT NOT NULL DEFAULT '0' COMMENT '平台编号',
  `platform_name` VARCHAR(10) NOT NULL DEFAULT '0'  COMMENT '平台名称',
  PRIMARY KEY (`platform_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='平台表';

DROP TABLE IF EXISTS `admin`;
CREATE TABLE `admin` (
  `admin_id` VARCHAR(18) NOT NULL DEFAULT ' ' COMMENT '帐号',
  `admin_name` VARCHAR(10) NOT NULL DEFAULT ' '  COMMENT '姓名',
  `platform_id` TINYINT NOT NULL DEFAULT '0' COMMENT '所属平台',
  `power` TINYINT NOT NULL DEFAULT '0' COMMENT '权限',
  `password` VARCHAR(18) NOT NULL DEFAULT ' ' COMMENT '密码',
  `store` bigint(20) NOT NULL DEFAULT '0' COMMENT '所属门店',
  PRIMARY KEY (`admin_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='管理员表';


DROP TABLE IF EXISTS `check`;
CREATE TABLE `check` (
  `check_id` bigint(20) NOT NULL DEFAULT '0' COMMENT '审核编号',
  `check_user` VARCHAR(18) NOT NULL DEFAULT ' ' COMMENT '审核操作人',
  `check_time` DATETIME NOT NULL DEFAULT '1900-01-01 00:00:00'  COMMENT '审核时间',
  `check_result` VARCHAR(100) NOT NULL DEFAULT '0' COMMENT '审核结果信息',
  `check_type` TINYINT NOT NULL DEFAULT '0' COMMENT '审核类型'
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin COMMENT='审核信息表';
/*
+1 审核表

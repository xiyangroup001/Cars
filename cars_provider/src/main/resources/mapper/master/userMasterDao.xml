<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" " http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiyan.dao.master.UserMasterDao">
    <resultMap id="userMap" type="com.xiyan.model.entrty.User">
        <id property="userName" column="user_name"/>
        <result property="userId" column="user_id"/>
        <result property="userGuid" column="user_guid"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userPassword" column="password"/>
        <result property="registrateTime" column="registrate_time"/>
        <result property="userType" column="user_type"/>
        <result property="headPicUrl" column="head_pic_url"/>
    </resultMap>

    <insert id="insert" parameterType="com.xiyan.model.entrty.User">
        insert into user(
            userName,
            userId,
            userGuid,
            userPhone,
            userPassword,
            registrateTime,
            userType,
            headPicUrl
        )
        values(
            #{userName},
            #{userId},
            #{userGuid},
            #{userPhone},
            #{userPassword},
            #{registrateTime},
            #{userType},
            #{headPicUrl}
        )
    </insert>

    <update id="update" parameterType="com.xiyan.model.entrty.User">
        update user
        set
        <trim suffixOverrides=",">
            <if test="userName != null">userName = #{userName},</if>
            <if test="userGuid != null">userGuid = #{userGuid},</if>
            <if test="userPhone != null">userPhone = #{userPhone},</if>
            <if test="userPassword != null">password = #{password},</if>
            <if test="registrateTime != null">registrateTime = #{registrateTime},</if>
            <if test="userType != null">userType = #{userType},</if>
            <if test="headPicUrl != null">headPicUrl = #{headPicUrl},</if>
        </trim>
        where
        userId=#{userId}
    </update>

    <delete id="delete" parameterType="int">
        delete from user
        where
        userId=#{userId}
    </delete>
</mapper>
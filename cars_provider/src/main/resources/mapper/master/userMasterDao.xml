<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" " http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiyan.dao.master.UserMasterDao">
    <resultMap id="userMap" type="com.xiyan.model.entrty.User">
        <id property="userName" column="user_name"/>
        <result property="userId" column="user_id"/>
        <result property="userGuid" column="user_guid"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userPassword" column="password"/>
        <result property="registrateTime" column="registrate_time"/>
        <result property="userType" column="user_type"/>
        <result property="headPicUrl" column="head_pic_url"/>
    </resultMap>

    <insert id="insertUser" parameterType="com.xiyan.model.entrty.User">
        insert into user(
            user_name,
            user_id,
            user_guid,
            user_phone,
            password,
            registrate_time,
            user_type,
            Head_pic_url
        )
        values(
            #{userName},
            #{userId},
            #{userGuid},
            #{userPhone},
            #{userPassword},
            #{registrateTime},
            #{userType},
            #{headPicUrl}
        )
    </insert>

    <update id="updateUser" parameterType="com.xiyan.model.entrty.User">
        update user
        set
        <trim suffixOverrides=",">
            <if test="userName != null">user_name = #{userName},</if>
            <if test="userGuid != null">user_guid = #{userGuid},</if>
            <if test="userPhone != null">user_phone = #{userPhone},</if>
            <if test="userPassword != null">password = #{userPassword},</if>
            <if test="registrateTime != null">registrate_time = #{registrateTime},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="headPicUrl != null">Head_pic_url = #{headPicUrl},</if>
        </trim>
        where
            user_id=#{userId}
    </update>

    <delete id="deleteUser" parameterType="int" >
        delete from user
        where
            user_id=#{userId}
    </delete>
</mapper>